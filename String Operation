//Write a program to perform the following operations without using string defined functions
//1. To find the length of the string
//2. To concatenate two string
//3. To find the reverse of a string
//4. To copy one string to another string

#include <stdio.h>
#include <stdlib.h>
#include<string.h>

int main()
{
    char str[100], str_length[100], str_ctc[100], str_copy[100];
    int ch, i, j, length;
        printf("\n MENU \n 1.To find the length of a string \n 2.To concatenate two strings");
        printf("\n 3.To find the reverse of a string \n 4.To copy one string to another string \n Enter your choice: ");
            scanf("%d", &ch);

     switch (ch)
        {
            case 1:
                       printf("\n Enter the String : ");
                              scanf("%s",str);
                   length=0;
                          for (i=0; str[i]!='\0'; ++i)
                              {
                                  length++;
                              }
                       printf("\n Length of the String is : %d", length);
            break;

            case 2:
                       printf("\n Enter the First String: ");
                              scanf("%s",str_ctc);
                       printf("\n Enter the Second String: ");
                              scanf("%s",str_length);
                          for(i=0; str_ctc[i]!='\0'; ++i);
                              for(j=0; str_length[j]!='\0'; ++j, ++i)
                                  {
                                        str_ctc[i]=str_length[j];
                                  }
                          str_ctc[i]='\0';
                       printf("\n String after the Concatenation = %s",str_ctc);
            break;

            case 3:
                       printf("\n Enter the String : ");
                              scanf("%s",str);
                    length = strlen(str);
                       printf("\n String after Reversing : ");
                          for (i = length - 1; i >= 0; i--)
                               {
                                   printf("%c", str[i]);
                               }
            break;

            case 4:
                       printf("\n Enter the String : ");
                              scanf("%s",str);
                          for (i = 0; str[i]!='\0'; i++)
                               {
                                   str_copy[i] = str[i];
                               }
                          str_copy[i] = '\0';

                       printf("\n String copied into CopyStr = %s", str_copy);
            break;

            default:
                       printf("\n WRONG CHOICE! \n TRY AGAIN!");
        }
   return 0;
}
